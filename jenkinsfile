def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger'
    ]
pipeline {
    agent any
    environment {
        SCANNER_HOME = tool 'sonarqube'
    }
    stages {
        stage('git checkout') {
            steps {
             git 'https://github.com/gow9629608170/Java-Springboot.git'
            }
        }
         stage('compile') {
            steps {
              sh 'mvn compile'
            }
        }
         stage('code analysis') {
            steps {
              withSonarQubeEnv('sonarqube') {
               sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Java-Springboot \
               -Dsonar.java.binaries=. \
               -Dsonar.projectKey=Java-Springboot'''
              }
            }
        }
        stage('package') {
            steps {
              sh 'mvn install'
            }
        }
         stage('docker build') {
            steps {
             script {
                    sh 'docker build -t java-spring .'
              }
            }
        }
         stage('docker push') {
            steps {
             script {
                    sh 'docker tag java-spring gow9629608170/java-spring'
                    sh 'docker push gow9629608170/java-spring'
              }
            }
         }    
        stage('docker container') {
            steps {
             script {
                    sh 'docker run -itd --name ci-cd-container -p 8085:8081 java-spring'
                  }
              }
            }
        }    	
    post {
        always {
            echo 'slack Notification.'
            slackSend channel: '#jspider',
            color: COLOR_MAP [currentBuild.currentResult],
            message: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URl}"
            
        }
    }
}
